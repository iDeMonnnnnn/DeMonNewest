<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base">
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Splash启动页Style -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!--启动画面背景颜色 @drawable/bg_start不生效-->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
<!--        <item name="windowSplashScreenAnimationDuration">100</item>-->
        <!-- Splash退出后的主题-->
        <item name="postSplashScreenTheme">@style/Theme.App.Start</item>
        <!--「启动画面」中心图标后面设置背景-->
        <item name="android:windowSplashScreenIconBackgroundColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Start" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_start</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>